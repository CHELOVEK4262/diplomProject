        } else if (type === 'user') {
            document.querySelector('#userModal h3').textContent = 'Добавить пользователя';
        }
    }
}
window.onclick = function(event) {
    const modals = ['userModal', 'truckModal', 'routeModal'];
    modals.forEach(id => {
